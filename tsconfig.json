{
  "compilerOptions": {
    "target": "es2017" ,
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}